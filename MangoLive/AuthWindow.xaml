<Window x:Class="MangoLive.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MangoLive"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="Authentication"
        Height="195" Width="400" ResizeMode="NoResize" SizeToContent="Height">
    <md:Card Margin="10">
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Serial :" />
            <TextBox Name="textSerial" IsReadOnly="True" />
            <TextBlock Text="Key :" Margin="0,10,0,0" />
            <TextBox Name="textKey" />
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Right">
                <Button Name="buttonOK" Content="OK" Width="100" Margin="0,0,10,0" Click="ButtonOK_Click" />
                <Button Name="buttonExit" Content="EXIT" Width="100" Click="ButtonExit_Click" />
            </StackPanel>
        </StackPanel>
    </md:Card>
</Window>